{
  "name": "ai-commit-pro",
  "displayName": "AI Commit Pro",
  "description": "Generate perfect commit messages with AI in one click",
  "version": "0.0.1",
  "publisher": "juaniitos",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "keywords": [
    "ai",
    "commit",
    "git",
    "claude",
    "anthropic",
    "conventional commits",
    "productivity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/juaniitos/AI-COMMIT-PRO"
  },
  "bugs": {
    "url": "https://github.com/juaniitos/AI-COMMIT-PRO/issues"
  },
  "homepage": "https://github.com/juaniitos/AI-COMMIT-PRO#readme",
  "license": "MIT",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-commit-pro.generateCommit",
        "title": "AI Commit: Generate Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "ai-commit-pro.gitWorkflow",
        "title": "AI Commit: Open Git Workflow",
        "icon": "$(git-branch)"
      }
    ],
    "keybindings": [
      {
        "command": "ai-commit-pro.generateCommit",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "scmProvider == git"
      },
      {
        "command": "ai-commit-pro.gitWorkflow",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "scmProvider == git"
      }
    ],
    "configuration": {
      "title": "AI Commit Pro",
      "properties": {
        "aiCommitPro.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Anthropic API Key (get it from console.anthropic.com)",
          "markdownDescription": "Get your API key from [Anthropic Console](https://console.anthropic.com/settings/keys)"
        },
        "aiCommitPro.model": {
          "type": "string",
          "default": "claude-3-5-haiku-20241022",
          "enum": [
            "claude-3-5-sonnet-20241022",
            "claude-3-5-haiku-20241022",
            "claude-3-opus-20240229"
          ],
          "enumDescriptions": [
            "Most capable (m√°s caro, $3 per 1M tokens)",
            "Fast and affordable (recomendado, $1 per 1M tokens)",
            "Previous generation ($15 per 1M tokens)"
          ],
          "description": "Claude model to use"
        },
        "aiCommitPro.language": {
          "type": "string",
          "default": "spanish",
          "enum": ["english", "spanish"],
          "description": "Language for commit messages"
        },
        "aiCommitPro.showPreview": {
          "type": "boolean",
          "default": true,
          "description": "Show preview panel to edit message before inserting into Git",
          "markdownDescription": "When enabled, shows a preview panel where you can edit the message before accepting. Disable for direct insertion."
        },
        "aiCommitPro.maxRecentCommits": {
          "type": "number",
          "default": 5,
          "minimum": 0,
          "maximum": 20,
          "description": "Number of recent commits to use as context (0 to disable)"
        },
        "aiCommitPro.autoCopyToClipboard": {
          "type": "boolean",
          "default": true,
          "description": "Automatically copy generated message to clipboard"
        }
      }
    },
    "menus": {
      "scm/title": [
        {
          "command": "ai-commit-pro.generateCommit",
          "group": "navigation",
          "when": "scmProvider == git"
        },
        {
          "command": "ai-commit-pro.gitWorkflow",
          "group": "navigation",
          "when": "scmProvider == git"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "simple-git": "^3.27.0"
  }
}